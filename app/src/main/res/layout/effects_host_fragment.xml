<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.sunflower.catchtherainbow.Views.Effects.EffectsHostFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/background_fragment"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/effectsFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp">

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/background_fragment"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bPlayEffect"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:background="@null"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_play"/>

                <com.sunflower.catchtherainbow.Views.AudioProgressView
                    android:id="@+id/audioProgressEffect"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/bOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_button"
                    android:text="@string/conformation"
                    android:textColor="@color/colorForeground"/>

                <Button
                    android:id="@+id/bCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_button"
                    android:text="@string/cancel"
                    android:textColor="@color/colorForeground"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
