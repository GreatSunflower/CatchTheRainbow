<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:clickable="false"
                android:focusable="false"
                android:orientation="vertical"
                android:padding="5dip"
                android:id="@+id/folders_layout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/imageViewFolder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false"
            app:srcCompat="@drawable/ic_project"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleFolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:clickable="false"
                android:focusable="false"
                android:text="@string/folder"
                android:textColor="@color/colorForeground"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tvPathFolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:clickable="false"
                android:focusable="false"
                android:paddingLeft="5dp"
                android:text="@string/path"
                android:textColor="@color/colorForegroundSecond"
                android:textSize="14sp"
                tools:textStyle="normal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:radius="10dip">

            <Button
                android:id="@+id/bRemoveProject"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/background_remove_button"
                android:clickable="false"
                android:focusable="false"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>