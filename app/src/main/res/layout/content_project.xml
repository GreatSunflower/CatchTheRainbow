<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_project"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sunflower.catchtherainbow.ProjectActivity"
    tools:showIn="@layout/app_bar_project"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <view
            android:layout_width="match_parent"
            class="com.sunflower.catchtherainbow.Views.AudioVisualizerView"
            android:id="@+id/audioVisualizerView"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/audioInfoTextView"
        android:gravity="start"
        android:foregroundGravity="center"
        android:textColor="@color/colorForeground"
        android:textAlignment="textStart"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>

    <com.sunflower.catchtherainbow.Views.AudioProgressView
        android:layout_width="match_parent"
        android:layout_below="@+id/Sacha"
        android:id="@+id/audioProgressView"
        android:layout_height="35dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        android:layout_width="75dp">

        <ImageButton
            android:text="Prev"
            android:id="@+id/playPrev"
            android:textColor="@color/colorForeground"
            app:srcCompat="@drawable/ic_skip_previous"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <ImageButton
            android:text="Play"
            android:id="@+id/Sacha"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorForeground"
            app:srcCompat="@drawable/ic_play"
            android:layout_marginRight="10dp"
            android:layout_width="55dp"
            android:layout_height="55dp"/>
            android:id="@+id/Sacha"
            android:layout_width="75dp"/>

        <ImageButton
            android:text="Next"
            android:id="@+id/playNext"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorForeground"
            app:srcCompat="@drawable/ic_skip_next"
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
            android:layout_width="75dp"/>
    </LinearLayout>
</LinearLayout>
