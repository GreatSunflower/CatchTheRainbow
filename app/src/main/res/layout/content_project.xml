<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_project"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sunflower.catchtherainbow.ProjectActivity"
    tools:showIn="@layout/app_bar_project"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/mainAreaContainer"/>

        <view
            android:layout_width="match_parent"
            class="com.sunflower.catchtherainbow.Views.AudioVisualizerView"
            android:id="@+id/audioVisualizerView"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_weight="0.15"
            android:layout_height="0dp"
            />
    </LinearLayout>

    <com.sunflower.catchtherainbow.Views.AudioProgressView
        android:layout_width="match_parent"
        android:layout_below="@+id/Sacha"
        android:id="@+id/audioProgressView"
        android:layout_height="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">
        android:layout_width="75dp">

        <ImageButton
            android:id="@+id/playPrev"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:text="Prev"
            android:textColor="@color/colorForeground"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_skip_previous"/>

        <ImageButton
            android:id="@+id/Sacha"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:text="Play"
            android:textColor="@color/colorForeground"
            app:srcCompat="@drawable/ic_play"/>
        android:id="@+id/Sacha"
        android:layout_width="75dp"/>

        <ImageButton
            android:id="@+id/playNext"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:text="Next"
            android:textColor="@color/colorForeground"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_skip_next"/>

        <ImageButton
            android:id="@+id/bRecorderStartStop"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_start_recorder"/>

        />
    </LinearLayout>
</LinearLayout>
